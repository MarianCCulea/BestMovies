@page "/starpage"
@using BestMovies.Model.Domain
@using Microsoft.AspNetCore.Components;
@inject IDataLayer DataLayer
@inject IJSRuntime jsRuntime
@inject NavigationManager NavigationManager

<h1>Star page</h1>
<table class="table" border="0" width="500" height="500" cellspacing="0">
    <tr>
        <th height="250">
            @id<br />
            <br /><br />
            Birth year : @item.birth
            <br /><br />
            Average rating of Movies Starred in:
            @item.average_movie_rating
        </th>
    </tr>
    <tr>

        <th>
          
            </th>
            </tr>
        </table>

        <button type="button" class="btn btn-danger" @onclick=BackToList>Back</button>
        <span id="resultJson">
        </span>


        @code {
            [Parameter]
            public String id { get; set; }

            private Model.Domain.Star item { get; set; }

            protected override void OnInitialized()
            {

                item = DataLayer.GetStar();
            }

            void BackToList()
            {
                NavigationManager.NavigateTo("/movies");
            }

        }